<p id="notice"><%= notice %></p>

<h1>Products</h1>

<% Product.descendants.each do |type| %>
  Total price of <%= type %> is <%= Product.product_wise_price_sum(type).round(2) %><br>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Color</th>
      <th>Status</th>
      <th>Inward date</th>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.color.present? ? product.color : 'NA' %></td>
        <td><%= product.status? ? 'Enabled' : 'Disabled' %></td>
        <td><%= product.inward_date %></td>
        <td><%= product.type %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

