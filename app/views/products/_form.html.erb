<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :type, value: @type %>
  <div class="field">
    <%= f.label 'name*' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label 'price*' %>
    <%= f.text_field :price %>
  </div>

  <% if product.type.eql?(Pen.model_name.to_s)%>
    <div class="field">
      <%= f.label :color %>
      <%= f.select :color, Pen::COLORS, {prompt: '-- select color --'} %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :status %>
    <%= f.check_box :status %>
  </div>

  <div class="field">
    <%= f.label 'inward_date*' %>
    <%= f.date_select :inward_date %>
  </div>

  <div class="field">
    <%= f.label 'description*' %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
